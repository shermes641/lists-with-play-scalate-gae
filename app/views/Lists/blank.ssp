<% attributes("title") = "Create a new list" %>
<form action='${url("Lists.create")}'
      method="POST" accept-charset="utf-8" 
      enctype="application/x-www-form-urlencoded" >
  <p>
    <label for="name">What's your new list name ?</label>
    <input type="text" name="name" id="name" size="60" />
  </p>
    
  <p>
    <input type="submit" value="Create this list"> or <a href='${url("Lists.index")}'>Cancel</a>
  </p>
</form>
